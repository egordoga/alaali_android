<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/design_default_color_secondary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_prodCard"
            android:layout_width="127dp"
            android:layout_height="119dp"
            tools:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_prodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/iv_prodCard"
            android:textSize="18sp"
            tools:text="AAAAAAAAA" />

        <TextView
            android:id="@+id/tv_prodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="75dp"
            android:layout_toEndOf="@+id/tv_pr"
            tools:text="222222" />

        <TextView
            android:id="@+id/tv_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="45dp"
            android:layout_toEndOf="@+id/iv_prodCard"
            android:text="Цена"
            tools:text="Цена" />

        <TextView
            android:id="@+id/tv_hrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="75dp"
            android:layout_toEndOf="@+id/tv_prodPrice"
            android:text="грн"
            tools:text="грн." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>